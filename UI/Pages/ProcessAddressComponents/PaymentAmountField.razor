@using DataLibrary.Models
@using System.Globalization
@namespace UI.Pages.ProcessAddressComponents

<div class="col gy-3">
	<label>Payment Amount USD</label>
	@if (AddressToBeInputModel is not null)
	{
		<MudNumericField T="decimal?" Format="C" Culture="CultureInfo.CurrentCulture" Label="Currency Amount" HelperText="Shift + Mouse wheel increment"
					 Variant="Variant.Filled" @bind-Value="AddressToBeInputModel.PaymentAmount" Min="0" Class="form-control" 
			Style="max-width: fit-content;" InvertMouseWheel="false" Required />
	}
</div>

@code {
	[Parameter]
	public AddressModel? AddressToBeInputModel { get; set; }
}
